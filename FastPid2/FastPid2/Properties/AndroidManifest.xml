<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="FastPid2.FastPid2" android:versionCode="1" android:versionName="1.0" android:installLocation="preferExternal">
  <uses-sdk android:minSdkVersion="15" android:targetSdkVersion="21" />
  <application android:label="FastPid" android:icon="@drawable/Icon">
    <meta-data android:name="com.google.android.gms.version" android:value="@integer/google_play_services_version" />
    <meta-data android:name="com.google.android.maps.v2.API_KEY" android:value="@string/google_maps_key" />
  </application>


  <!-- Dostep do internetu, aby pobrac mapy i moc uzyc Google Play Services-->
  <uses-permission android:name="android.permission.INTERNET" />

  <!-- Dostep do Google web-based services. -->
  <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />

  <!-- Google Maps dla Android v2 bedzie buforowac pamec podreczna mapy na zewnetrznym urzadzeniu -->
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

  <!-- Dostep do polaczenia internetowego, w celu pobierania map -->
  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

  <!-- Nazwa pakietu naszej aplikacji jako przedrostek uprawnien -->
  <uses-permission android:name="your.application.package.permission.MAPS_RECEIVE" />

  <!-- Opcjonalnie, ale polecane, pozwala mapie uzywac My Location provider -->
  <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
  <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />


</manifest>